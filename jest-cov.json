{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@transactions-api/(.*)$": "<rootDir>/src/$1"
  },
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ]
}